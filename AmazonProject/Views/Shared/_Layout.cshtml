@{
    ViewData["Title"] = "Amazon 2.0";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
    <link href="~/lib/css/bootstrap.min.css" rel="stylesheet" /> <!--Included the bootstrap in the shared layout so every file can access it
                                                                     I used libman to install the bootstrap-->
</head>
<body>
    <div class="bg-dark text-white p-2">
        <span class="navbar-brand m-lg-2">AMAZON 2.0    </span>
    </div>
    <div class="row m-1 p-1">

        <div id="types" class="col-3">
            <vc:types></vc:types>
        </div>
            
        <div class="col-9">
            <div>
                @RenderBody()
            </div>
        </div>


        <footer>Amazon 2.0 - Solomon Berry</footer>
    </div>
</body>
</html>
