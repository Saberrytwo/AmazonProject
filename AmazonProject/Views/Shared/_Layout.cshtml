@{
    ViewData["Title"] = "Amazon 2.0";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
    <link href="~/lib/css/bootstrap.min.css" rel="stylesheet" /><!--Included the bootstrap in the shared layout so every file can access it I used libman to install the bootstrap-->
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
    
</head>
<body>
    <div class="bg-dark text-white p-2">
        <div class="container-fluid">
            <div class="row">
                <div class="col navbar-brand">AMAZON 2.0</div>
                <div class="col-6 text-right">
                    <vc:cart-summary />
                </div>
            </div>
        </div>
    </div>
    <div class="row m-1 p-1">

        <div id="types" class="col-3">
            <vc:types></vc:types>
        </div>

        <div class="col-9">
            <div>
                @RenderBody()
            </div>
        </div>


        <footer>Amazon 2.0 - Solomon Berry</footer>
    </div>
</body>
</html>
